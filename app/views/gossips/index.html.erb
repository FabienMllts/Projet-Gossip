<h1>List des Gossips</h1>
<%= link_to 'Créer un nouveau gossip', new_gossip_path %>
<table>
 <tr>
   <th>Ecrit par</th><span>
   <th>Gossip</th>
   <th colspan="3"></th>
 </tr>

 <% @gossips.each do |gossip| %>
   <tr>
     <td><%= gossip.anonymous_author %></td>
     <td><em><%= gossip.content %></em></td>
     <td><%= link_to 'Montrer', gossip_path(gossip) %></td>
     <td><%= link_to 'Editer', edit_gossip_path(gossip) %></td>
     <td><%= link_to 'Détruire', gossip_path(gossip),
             method: :delete,
             data: { confirm: 'Etes-vous sur ?' } %></td>
   </tr>
 <% end %>
</table>